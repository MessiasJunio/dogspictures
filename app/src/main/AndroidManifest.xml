        android:roundIcon="@drawable/dogslogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.CadastroPessoaActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.PessoaListaActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.CadastroPetActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.PetListaActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.AdministradorActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".teste" />
        <activity
            android:name=".controller.SlideShow"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".controller.Carregamento"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>