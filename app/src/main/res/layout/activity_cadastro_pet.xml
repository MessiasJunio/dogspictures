<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blacklabrador"
        android:orientation="vertical"
    tools:context="br.com.dogs.controller.CadastroPetActivity">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cadastro de cães"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/formLogo"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/transparente_branco"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:text="Características"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/cadastropet_edtNome"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/borda_redonda_branco"
                    android:drawablePadding="5dp"
                    android:hint="Nome"
                    android:paddingStart="10dp"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/cadastropet_spinRaca"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/borda_redonda_branco"
                    android:drawablePadding="5dp"
                    android:hint="Raça"
                    android:paddingStart="10dp"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/cadastropet_edtNascimento"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/borda_redonda_branco"
                    android:drawablePadding="5dp"
                    android:hint="Nascimento"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:paddingStart="10dp"
                    android:textSize="14sp" />


                <Spinner
                    android:id="@+id/cadastropet_spinSexo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/borda_redonda_branco"
                    android:drawablePadding="5dp"
                    android:hint="Raça"
                    android:paddingStart="10dp"
                    android:textSize="14sp" />

                <AutoCompleteTextView
                    android:id="@+id/cadastropet_edtDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/borda_redonda_branco"
                    android:drawablePadding="5dp"
                    android:hint="Descrição"
                    android:paddingStart="10dp"
                    android:textSize="14sp" />


                <Button
                    android:id="@+id/cadastropet_btnCadastrar"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="36dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/botao_azul"
                    android:onClick="cadastrar"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Cadastrar"
                    android:textColor="@color/white"
                    android:textStyle="normal" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
